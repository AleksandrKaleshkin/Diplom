@model WebTraining.Models.User.CreateUserViewModel

@{
    ViewBag.Title = "Добавление пользователя";
}
<form asp-action="Create" >
    <div  asp-validation-summary="All"></div>
    <div class="div-crud-data">
        <label class="label-crud-data" asp-for="Name">Имя</label>
        <input class="input-crud-data" type="text" asp-for="Name" />
    </div>
    <div class="div-crud-data">
        <label class="label-crud-data" asp-for="Email">Email</label>
        <input class="input-crud-data" type="text" asp-for="Email" />
    </div>
    <div class="div-crud-data">
        <label class="label-crud-data" asp-for="Password">Пароль</label>
        <input class="input-crud-data" type="text" asp-for="Password" />
    </div>

    <div class="form-group">

        <input class="btn-add" type="submit" value="Добавить" />
    </div>
</form>
