@model IEnumerable<WebTraining.DB.Models.User>
@{
    ViewBag.Title = "Список пользователей";
}

<a asp-action="Create">Добавить пользователя</a>

<table class="table">
    <tr><th>Email</th><th>Имя</th><th></th></tr>
    @foreach (var user in Model)
    {
            <tr>
                <td>@user.Email</td>
                <td>@user.Name</td>
                <td>
                    <form asp-action="Delete" asp-route-id="@user.Id" method="post">
                        <a  asp-action="Edit" asp-route-id="@user.Id">Изменить</a>
                        <a class="btn btn-sm btn-primary" asp-action="ChangePassword" asp-route-id="@user.Id">Сменить пароль</a>
                        <button type="submit">
                            Удалить
                        </button>
                    </form>
                </td>
            </tr>
    }
</table>
